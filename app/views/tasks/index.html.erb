<h1>My Tasks</h1>
<div>
  <ul>
    <% @tasks.each do |task| %>

      <li>
        <% if task.completed %>
          <input type="checkbox" checked>
        <% else %>
          <input type="checkbox" >
        <% end %>
        <%= link_to task.title, show_path(task) %>
        <%= link_to destroy_path(task), method: :delete do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </li>
    <% end  %>
  </ul>
</div>
<%= link_to "Add a new task", new_path %>

